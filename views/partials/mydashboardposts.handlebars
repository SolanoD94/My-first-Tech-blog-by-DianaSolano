<div class="col">
    <div class="card border-primary h-100">
      <div class="card-body">
        <div class="d-flex justify-content-left align-items-center">
                <span class="badge bg-primary rounded-pill mb-2">{{id}}</span>
                <h5 class="card-title px-3">{{blog_title}}</h5>
        </div>       
        <p class="card-text">{{description}}</p>
        {{!-- View Comments Button --}}
            <a class="card-link me-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseComment" aria-expanded="false" aria-controls="collapseComment">View comments</a>
        {{!-- Delete Button --}}
        <button id="deleteBtn" att-blog-id="{{id}}" class="btn btn-outline-danger" type="button">
                Delete Post                
        </button>
        {{!-- Update Button --}}
        <button id="updateBtn"  type="button" class="btn btn-outline-secondary mx-3" data-bs-toggle="modal" data-bs-target="#updatePost" data-bs-whatever="Title" >Update</button></button>

                {{!-- Modal to update post--}}
                <div id="updatePost" class="modal fade" tabindex="-1" aria-labelledby="updatePost" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                        <h1 class="modal-title fs-5">Update your post</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                        <form>
                        <div class="mb-3">
                                <label for="recipient-name" class="col-form-label" >Title:</label>
                                <textarea type="text" class="form-control" id="updatePostTitle">{{blog_title}}</textarea>
                        </div>
                        <div class="mb-3">
                                <label for="message-text" class="col-form-label" >Description:</label>
                                <textarea class="form-control" id="updatePostDescription">{{description}}</textarea>
                        </div>
                        </form>
                </div>
                <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button att-blog-id="{{id}}" id="saveBtn" type="button" class="btn btn-primary">Save</button>
                </div>
                </div>
                </div>
                </div>

                {{!-- Comments Cards --}}
                <div class="collapse my-4" id="collapseComment">
                        {{#each comments as |comment|}}
                        <p class="form-control" id="exampleFormControlTextarea1" rows="3" >{{comment_text}}</p>
                        {{/each}}
                </div>
      </div>
    </div>
  </div>
